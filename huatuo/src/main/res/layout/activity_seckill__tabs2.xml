<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/id_stickynavlayout_tab"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/tab_default"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_tab_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="默认"
                android:textColor="@color/c5"
                android:textSize="@dimen/text_size_14" />

            
             <View
            android:id="@+id/view_tab_default"
            style="@style/secKill_tabLine_style"/>
           
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_saleVolume"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_tab_saleVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="销量优先"
                android:textColor="@color/c5"
                android:textSize="@dimen/text_size_14" />

            
             <View
            android:id="@+id/view_tab_saleVolume"
           style="@style/secKill_tabLine_style"/>
           
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/tv_tab_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="价格"
                    android:textColor="@color/c5"
                    android:textSize="@dimen/text_size_14" />

                <ImageView
                    android:id="@+id/iv_tab_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_tab_price"
                    android:src="@drawable/icon_screen" />
            </RelativeLayout>

            
             <View
            android:id="@+id/view_tab_price"
            style="@style/secKill_tabLine_style"/>
           
        </RelativeLayout>
    </LinearLayout>

    <!-- <ImageView
        android:id="@+id/iv_tab_line"
        android:layout_width="40dp"
        android:layout_height="2dp"
        android:src="@drawable/custom_seckill_tab_line" /> -->

</LinearLayout>