<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_find_icon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" 
   >

    <ImageView
        android:id="@+id/iv_find_icon"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/rl_find_icon_bg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignBottom="@+id/iv_find_icon"
        android:background="@drawable/img_mask"
        android:orientation="vertical"
        android:paddingBottom="25dp" >

        <TextView
            android:id="@+id/tv_find_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="49dp"
            android:layout_marginRight="49dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_find_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_find_icon"
        android:background="@color/white"
        android:padding="14dp"
        android:text=""
        android:textColor="@color/c5"
        android:textSize="@dimen/text_size_16" 
        android:visibility="gone"/>

</RelativeLayout>