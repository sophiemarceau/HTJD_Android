<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
         android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:background="@color/white"
        android:paddingBottom="20dp" 
        android:layout_marginRight="10dp"
         android:layout_marginLeft="10dp">


        <TextView
            android:id="@+id/tv_technicianName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:textColor="@color/c3"
            android:textSize="@dimen/text_size_18"
             />

        <TextView
            android:id="@+id/tv_technicianLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_technicianName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:drawableLeft="@drawable/icon_grade"
            android:drawablePadding="6dp"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/c6" />

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_technicianLevel"
            android:layout_marginTop="20dp" >

            <RelativeLayout
                android:id="@+id/ly1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/line1" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="评分"
                    android:textColor="@color/c7"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_pingfen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/c4"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="1px"
                android:layout_height="26dp"
                android:layout_marginLeft="30dp"
                android:layout_toLeftOf="@+id/ly2"
                android:layout_centerVertical="true"
                android:background="@color/c8" />

            <RelativeLayout
                android:id="@+id/ly2"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" >

                <TextView
                    android:id="@+id/tv_orderNumber1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="单数"
                    android:textColor="@color/c7"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_orderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_orderNumber1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/c4"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="1px"
                android:layout_height="26dp"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ly2"
                android:background="@color/c8" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/line2" >

                <TextView
                    android:id="@+id/tv_distance1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="距离"
                    android:textColor="@color/c7"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_distance1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/c4"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/c8" />

        <TextView
            android:id="@+id/tv_tech_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:layout_marginTop="10dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:textColor="@color/c7"
            android:lineSpacingExtra="7dp"
            android:textSize="@dimen/text_size_12" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_tech_info"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@color/c8" />

        <RelativeLayout
            android:id="@+id/rl_tech_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="所属："
                android:textColor="@color/c7"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_tech_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView5"
                android:textColor="@color/c7"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_appoint"
            android:layout_width="195dp"
            android:layout_height="35dp"
            android:layout_below="@+id/rl_tech_from"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_teachappointment"
            android:gravity="center"
            android:text="预约技师"
            android:textColor="@color/c5"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>

    <com.huatuo.custom_widget.ImageViewCircle
        android:id="@+id/iv_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />
    
     <TextView
            android:id="@+id/tv_isAppoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rl_info"
            android:layout_alignTop="@+id/rl_info"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/iv_icon"
            android:background="@drawable/icon_teachlist_normal"
            android:gravity="center"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/white" />
     
      <View
         android:id="@+id/view_bootom"
        android:layout_width="wrap_content"
        android:layout_height="11dp"
        android:layout_below="@+id/rl_info"
        android:background="@color/bg_color" 
        android:visibility="visible"/>

</RelativeLayout>