<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/public_cityhot_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15.0dp"
        android:gravity="center_vertical"
        android:text="A"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#ff8c8c8c"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/ListBackground"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_below="@id/alpha"
        android:background="@drawable/city_item_bg"
        android:paddingLeft="20dp"
        android:paddingRight="40dp" >

        <TextView
            android:id="@+id/public_cityhot_item_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:text="北京"
            android:textColor="#ff5c5c5c"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"
            android:background="#ffdddddc" />
    </RelativeLayout>

</RelativeLayout>