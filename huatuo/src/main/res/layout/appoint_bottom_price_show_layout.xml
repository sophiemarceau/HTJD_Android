<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp"
    android:visibility="visible" >

    <LinearLayout
        android:id="@+id/layout_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_serviceFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c5"
            android:text="￥0"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c5"
            android:text="x1"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_countFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="=￥0"
           android:textColor="@color/c5"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/tv_cunponFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/c5"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_size_15"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_zj_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_fee"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_bottom_bedFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/c5"
            android:textSize="@dimen/text_size_15"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_bootom_trafficFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
           android:textColor="@color/c5"
            android:textSize="@dimen/text_size_15"
           android:visibility="gone" 
           android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_zj_fee"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal" 
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tv_clockLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
           android:textColor="@color/c5"
            android:textSize="@dimen/text_size_15"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout_time"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal" 
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tv_total1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总计："
            android:textColor="@color/c3"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_total2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/c3"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/c3"
            android:textSize="17sp" />
    </LinearLayout>

</RelativeLayout>