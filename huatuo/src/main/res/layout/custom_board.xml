<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/ll_share2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="22dp"
        android:paddingTop="22dp" >

        <RelativeLayout
            android:id="@+id/rl_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_share_wechat" />

            <TextView
                android:id="@+id/tv_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wechat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="微信"
                android:textColor="@color/c6"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/wechat_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_share_circle" />

            <TextView
                android:id="@+id/tv_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wechat_circle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="朋友圈"
                android:textColor="@color/c6"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:visibility="gone">

            <ImageView
                android:id="@+id/sina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_share_weibo" />

            <TextView
                android:id="@+id/tv_sina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sina"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="微博"
                android:textColor="@color/c6"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ctrl_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/ctrl_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_share_link" />

            <TextView
                android:id="@+id/tv_ctrl_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ctrl_c"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="复制链接"
                android:textColor="@color/c6"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_share2"
        android:background="@color/bg_color" />

    <TextView
        android:id="@+id/share_cancel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/divider_line"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/btn_text_blue"
        android:textSize="16sp" 
        android:background="@drawable/bg_listview_item_press"/>

</RelativeLayout>